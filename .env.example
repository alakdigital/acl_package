# ============================================
# Configuration FastAPI-ACL
# ============================================
# Copiez ce fichier en .env et modifiez les valeurs

# ============================================
# Base de données
# ============================================
# Type: mongodb, postgresql, mysql
ACL_DATABASE_TYPE=postgresql

# URI MongoDB
# ACL_MONGODB_URI=mongodb://localhost:27017/acl_db

# URI PostgreSQL (recommandé)
ACL_POSTGRESQL_URI=postgresql+asyncpg://postgres:password@localhost:5432/acl_db

# URI MySQL
# ACL_MYSQL_URI=mysql+asyncmy://root:password@localhost:3306/acl_db

# ============================================
# Cache Redis
# ============================================
ACL_ENABLE_CACHE=true
ACL_REDIS_URL=redis://localhost:6379/0
ACL_CACHE_TTL=300
ACL_CACHE_BACKEND=redis

# ============================================
# JWT Configuration
# ============================================
# IMPORTANT: Changez cette clé en production!
ACL_JWT_SECRET_KEY=votre-cle-secrete-de-minimum-32-caracteres-ici
ACL_JWT_ALGORITHM=HS256
ACL_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
ACL_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# API Configuration
# ============================================
ACL_ENABLE_API_ROUTES=true
ACL_API_PREFIX=/api/v1

# ============================================
# Features
# ============================================
ACL_ENABLE_AUTH_FEATURE=true
ACL_ENABLE_PERMISSIONS_FEATURE=false
ACL_ENABLE_ROLES_FEATURE=false

# ============================================
# Développement
# ============================================
ACL_DISABLE_AUTH_FOR_DEV=false
ACL_CREATE_DEFAULT_ADMIN=true
ACL_DEFAULT_ADMIN_USERNAME=admin
ACL_DEFAULT_ADMIN_EMAIL=admin@example.com
ACL_DEFAULT_ADMIN_PASSWORD=admin123456
ACL_LOG_LEVEL=INFO
